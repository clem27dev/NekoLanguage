// Importer le module Discord
importer Discord;

// Importer le module Base pour les fonctions essentielles
importer Base;

// Configuration du bot
nekVariable TOKEN = "VOTRE_TOKEN_DISCORD_ICI"; // Remplacer par votre token Discord
nekVariable PREFIX = "!";  // Pr√©fixe pour les commandes

// Cr√©er le bot
nekVariable monBot = nekCr√©erBot(TOKEN);

// Changer le statut du bot
monBot.changerStatut("Je suis un bot nekoScript", "JOUE");

// Quand le bot est connect√©
monBot.surConnexion(function(info) {
  nekAfficher("‚úì Bot connect√© sous le nom: " + info.nom);
  nekAfficher("‚úì Tag complet: " + info.tag);
  nekAfficher("‚úì Le bot est connect√© √† " + info.serveurs + " serveurs");
});

// R√©pondre aux messages
monBot.surMessage(function(message) {

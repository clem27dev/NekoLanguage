// Exemple de bot Discord complet en nekoScript
// Ce bot peut r√©pondre √† plusieurs commandes et utilise les embeds
// Il a aussi un statut personnalis√©

// Importer le module Discord
importer Discord;

// Configuration du bot
nekVariable TOKEN = "VOTRE_TOKEN_DISCORD_ICI";
nekVariable PREFIX = "!";  // Pr√©fixe pour les commandes

// Cr√©er et configurer le bot
nekVariable bot = nekCr√©erBot(TOKEN)
  .d√©finirPr√©fixe(PREFIX)
  .changerStatut("nekoScript | !aide", "JOUE");

// Quand le bot est pr√™t
bot.surConnexion(function(info) {
  nekAfficher("Bot connect√© comme: " + info.tag);
  nekAfficher("Pr√©sent sur " + info.serveurs + " serveurs");
});

// G√©rer les messages re√ßus
bot.surMessage(function(message) {
  // Ignorer si le message ne commence pas par le pr√©fixe
  si (message.contenu.startsWith(PREFIX) === false) {
    retourner;
  }

  // Parser la commande
  nekVariable commande = parseCommandes(PREFIX, message.contenu);
  
  // Si la commande est nulle, ignorer
  si (commande === null) {
    retourner;
  }

  // Traiter les diff√©rentes commandes
  si (commande.commandName === "ping") {
    // Commande simple: ping/pong
    message.r√©pondre("üèì Pong!");
  } 
  sinon si (commande.commandName === "aide" || commande.commandName === "help") {
    // Commande d'aide avec embed
    nekVariable embed = bot.cr√©erEmbed(
      "Aide du Bot nekoScript",
      "Voici les commandes disponibles:",
      "#8c52ff"
    )
    .ajouterChamp(PREFIX + "ping", "V√©rifie si le bot r√©pond", true)
    .ajouterChamp(PREFIX + "aide", "Affiche cette aide", true)
    .ajouterChamp(PREFIX + "info", "Informations sur nekoScript", true)
    .ajouterChamp(PREFIX + "avatar", "Affiche votre avatar", true)
    .ajouterChamp(PREFIX + "salut", "Le bot vous dit bonjour", true)
    .d√©finirFooter("Bot cr√©√© avec nekoScript üê±");
    
    // Envoyer dans le canal actuel
    message.r√©pondre({ embeds: [embed.embed] });
  }
  sinon si (commande.commandName === "info") {
    // Informations sur nekoScript
    nekVariable embed = bot.cr√©erEmbed(
      "nekoScript",
      "nekoScript est un langage de programmation en fran√ßais con√ßu pour √™tre simple et accessible.",
      "#ff9966"
    )
    .ajouterChamp("Caract√©ristiques", "‚úì Syntaxe en fran√ßais\n‚úì Fonctions simples\n‚úì Support Discord", false)
    .ajouterChamp("Liens", "[Site Web](https://nekoscript.example) | [GitHub](https://github.com/exemple/nekoScript)", false)
    .d√©finirImage("https://i.imgur.com/pIZQxGw.png") // Logo nekoScript
    .d√©finirFooter("nekoScript v1.2.0");
    
    message.r√©pondre({ embeds: [embed.embed] });
  }
  sinon si (commande.commandName === "avatar") {
    // Afficher l'avatar de l'utilisateur
    nekVariable avatarURL = "https://cdn.discordapp.com/avatars/" + message.auteurId + "/" + "avatar.png";
    
    nekVariable embed = bot.cr√©erEmbed(
      "Avatar de " + message.auteur,
      "Voici votre avatar:",
      "#33cc99"
    )
    .d√©finirImage(avatarURL);
    
    message.r√©pondre({ embeds: [embed.embed] });
  }
  sinon si (commande.commandName === "salut") {
    // Dire bonjour avec une r√©action emoji
    message.r√©pondre("üëã Bonjour " + message.auteur + "! Comment vas-tu aujourd'hui?");
    message.r√©action("üëã");
  }
  sinon {
    // Commande inconnue
    message.r√©pondre("‚ùì Commande inconnue. Utilisez `" + PREFIX + "aide` pour voir les commandes disponibles.");
  }
});
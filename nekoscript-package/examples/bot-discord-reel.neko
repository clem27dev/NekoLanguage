// bot-discord-reel.neko - Un bot Discord créé avec nekoScript
nekModule BotDiscord {
  // Importer les packages nécessaires
  nekImporter Base;
  nekImporter Discord;
  
  // Configuration du bot
  nekVariable TOKEN = "VOTRE_TOKEN_DISCORD"; // Remplacer par votre token Discord
  nekVariable PREFIX = "!";
  
  // Fonction principale pour le démarrage du bot
  nekFonction nekPrincipal() {
    nekAfficher("Démarrage du bot Discord...");
    
    // Création d'un nouveau client Discord
    nekVariable bot = Discord.créerBot(TOKEN);
    
    // Configuration des événements
    bot.surConnexion(() => {
      nekAfficher("Bot connecté avec succès!");
      nekAfficher("Nom du bot: " + bot.nom);
      nekAfficher("ID du bot: " + bot.id);
    });
    
    // Gestion des messages reçus
    bot.surMessage(message => {
      // Ignorer les messages du bot lui-même
      si (message.auteur.estBot) {
        nekRetourner;
      }
      
      // Vérifier si le message commence par le préfixe
      si (message.contenu.commenceAvec(PREFIX)) {
        // Extraire la commande et les arguments
        nekVariable args = message.contenu.substring(PREFIX.longueur).split(" ");
        nekVariable commande = args[0].toLowerCase();
        args.shift(); // Retirer la commande des arguments
        
        // Commandes disponibles
        si (commande === "ping") {
          message.répondre("Pong! 🏓 Latence: " + bot.latence + "ms");
        }
        sinonSi (commande === "info") {
          message.répondre("Je suis un vrai bot Discord créé avec nekoScript! 🐱");
        }
        sinonSi (commande === "aide") {
          message.répondre(`
**Commandes disponibles:**
- ${PREFIX}ping - Vérifier la latence du bot
- ${PREFIX}info - Informations sur le bot
- ${PREFIX}aide - Afficher cette aide
- ${PREFIX}salut - Dire bonjour
- ${PREFIX}météo [ville] - Afficher la météo (simulation)
          `);
        }
        sinonSi (commande === "salut") {
          message.répondre("Bonjour " + message.auteur.nom + "! 👋");
        }
        sinonSi (commande === "météo") {
          nekVariable ville = args.join(" ") || "Paris";
          nekVariable météos = ["☀️ Ensoleillé", "🌧️ Pluvieux", "⛅ Nuageux", "❄️ Neigeux", "🌪️ Orageux"];
          nekVariable températures = Math.floor(Math.random() * 30) + 5; // Entre 5°C et 35°C
          nekVariable météoIndex = Math.floor(Math.random() * météos.length);
          
          message.répondre(`
**Météo pour ${ville}:**
Temps: ${météos[météoIndex]}
Température: ${températures}°C
          `);
        }
      }
    });
    
    // Démarrer le bot
    bot.démarrer();
    
    nekRetourner "Bot démarré avec succès";
  }
}
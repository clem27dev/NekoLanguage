// Configuration
nekVariable token = "VOTRE_TOKEN_DISCORD_ICI";
nekVariable prefix = "!";

// CrÃ©er un client Discord
nekVariable Discord = require("discord.js");
nekVariable client = new Discord.Client({
  intents: [
    "Guilds",
    "GuildMessages", 
    "MessageContent",
    "GuildMembers"
  ]
});

// Ã‰vÃ©nement: quand le bot est prÃªt
client.once("ready", () => {
  console.log("Bot nekoScript prÃªt!");
  client.user.setActivity(prefix + "aide", { type: "PLAYING" });
});

// Ã‰vÃ©nement: quand un message est reÃ§u
client.on("messageCreate", (message) => {
  // Ignorer les messages des bots
  if (message.author.bot) return;
  
  // Afficher le message reÃ§u
  console.log(`Message de ${message.author.username}: ${message.content}`);
  
  // Commande !ping
  if (message.content === prefix + "ping") {
    message.reply("Pong!");
  }
  
  // Commande !aide
  if (message.content === prefix + "aide") {
    message.reply("Commandes disponibles: !ping, !aide, !bonjour");
  }
  
  // Commande !bonjour
  if (message.content === prefix + "bonjour") {
    message.reply("Bonjour " + message.author.username + " ! ðŸ‘‹");
  }
});

// Connexion Ã  Discord
client.login(token);